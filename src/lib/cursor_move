#!/bin/bash
base=`basename "$0"`

## ---------------------------------------------------
## @name hide_cursor()
##
##
##
## ---------------------------------------------------
function hide_cursor() {
    tput civis
}

## ---------------------------------------------------
## @name show_cursor()
##
##
##
## ---------------------------------------------------
function show_cursor() {
    tput cnorm
}

## ---------------------------------------------------
## @name erase_to_end()
##
##
##
## ---------------------------------------------------
function erase_to_end() {
    echo -en "\033[K"
}

## ---------------------------------------------------
## @name UP()
##
##
##
## ---------------------------------------------------
function UP() {
    echo -en "\033[${1}A"
}

## ---------------------------------------------------
## @name DOWN()
##
##
##
## ---------------------------------------------------
function DOWN() {
    echo -en "\033[${1}B"
}

## ---------------------------------------------------
## @name BACK()
##
##
##
## ---------------------------------------------------
function BACK() {
    echo -en "\033[${1}D"
}

## ---------------------------------------------------
## @name FORWARD()
##
##
##
## ---------------------------------------------------
function FORWARD() {
    echo -en "\033[${1}C"
}

## ---------------------------------------------------
## @name get_coord()
##
##
##
## ---------------------------------------------------
function get_coord() {
    local __return1=$1
    local __return2=$2
    local rand=$(( RANDOM % 30 ))
    eval $__return1="'$rand'"
    local rand=$(( RANDOM % 30 ))
    eval $__return2="'$rand'"
}

## ---------------------------------------------------
## @name set_position()
##
##
##
## ---------------------------------------------------
function set_position() {
    echo -ne "\033[${1};${2}H"
}

## ---------------------------------------------------
## @name cursor_home()
##
##
##
## ---------------------------------------------------
function cursor_home() {
    set_position $ROWS 0
}

